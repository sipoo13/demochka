<Window x:Class="Session_4.Manager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Session_4"
        mc:Ignorable="d"
        Title="Manager" Height="600" Width="1200" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Name="ProductDG" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Название продукта" Binding="{Binding Product_Name}"></DataGridTextColumn>
                <DataGridTextColumn Width="*" Header="Ширина" Binding="{Binding Weight}"></DataGridTextColumn>
                <DataGridTextColumn Width="*" Header="Высота" Binding="{Binding Height}"></DataGridTextColumn>
                <DataGridTextColumn Width="*" Header="Количество" Binding="{Binding Count}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="LogOutButton" Click="LogOutButton_Click" Grid.Row="1" VerticalAlignment="Center" FontSize="380" HorizontalAlignment="Center">Выйти</Button>
    </Grid>
</Window>
